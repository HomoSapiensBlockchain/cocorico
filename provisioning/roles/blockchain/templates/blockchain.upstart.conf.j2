description "{{ role_name }}"

{% if is_development_environment %}
start on vagrant-mounted
{% else %}
start on startup
{% endif %}
stop on shutdown

respawn
respawn limit 10 5

script
    exec geth --rpc --rpccorsdomain "http://{{ ethereum_rpc_host }}:{{ ethereum_rpc_port }}" --genesis {{ project_dir }}/{{ role_name }}/genesis_block.json --networkid "{{ ethereum_network_id }}"
end script
